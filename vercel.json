{
  "buildCommand": "make build-vercel",
  "outputDirectory": "web/build",
  "installCommand": "echo 'Dependencies handled by make command'",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://your-backend-url.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 